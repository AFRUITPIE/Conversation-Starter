<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="false"
        android:key="evil_mode"
        android:summary="@string/evil_mode_summary"
        android:title="@string/evil_mode_title" />
    <EditTextPreference
        android:key="convo_repo_evil"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/convo_repo_summary"
        android:title="@string/convo_repo_title" />
    <SeekBarPreference
        android:defaultValue="5"
        android:key="refresh_time_evil"
        android:max="60"
        android:title="Time to refresh evil repo" />
</PreferenceScreen>